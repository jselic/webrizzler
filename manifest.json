{
    "manifest_version": 2,
    "name": "Webrizzler",
    "version": "1.0",
    "description": "Beta to sigma",
    "permissions": [
      "activeTab",
      "<all_urls>"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }